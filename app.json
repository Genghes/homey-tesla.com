{
  "id":"com.tesla",
  "version":"1.0.2",
  "compatibility":">=1.1.2",
  "name":{
    "en":"Tesla",
    "nl":"Tesla"
  },
  "description":{
    "en":"Control your Tesla Model S",
    "nl":"Bedien je Tesla Model S"
  },
  "author":{
    "name":"Erik van Dongen",
    "website":"http://github.com/irritanterik/"
  },
  "category":[
		"tools",
		"localization"
	],
  "permissions":[
    "homey:manager:geolocation",
    "homey:manager:speech-input",
    "homey:manager:speech-output"
  ],
  "images":{
    "large":"./assets/images/large.png",
    "small":"./assets/images/small.png"
  },
  "capabilities":{
    "location": {
      "type": "string",
      "title": {
        "en": "Location",
        "nl": "Positie"
      },
      "units": {
        "en": "Lat Lng"
      },
      "desc": {
        "en": "GPS location"
      },
      "getable": true,
      "setable": false
    },
    "location_human": {
      "type": "string",
      "title": {
        "en": "Location",
        "nl": "Positie"
      },
      "desc": {
        "en": "Location"
      },
      "getable": true,
      "setable": false
    },
    "moving": {
      "type": "boolean",
      "title": {
        "en": "Movement",
        "nl": "Onderweg"
      },
      "desc": {
        "en": "Is car moving",
        "nl": "Is auto onderweg"
      },
      "getable": true,
      "setable": false
    }
  },
  "drivers":[
    {
      "id":"models",
      "name":{
        "en":"Model S",
        "nl":"Model S"
      },
      "images":{
        "large":"drivers/models/assets/images/large.jpg",
        "small":"drivers/models/assets/images/small.jpg"
      },
      "class":"other",
      "capabilities":["location", "location_human", "moving"],
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": []
          },
          {
            "id": "sensor",
            "capabilities": ["moving", "location_human"],
            "options": {
              "icons": {
                "moving": "/assets/gauge_icon.svg",
                "location_human": "/assets/location_icon.svg"
              },
              "moving": {
                "noblink": true,
                "label": {
                  "true": {
                    "en": "Driving",
                    "nl": "Rijdt"
                  },
                  "false": {
                    "en": "Not driving",
                    "nl": "Staat stil"
                  }
                }
              }
            }
          }
        ]
      },
      "settings":[
        {
          "type":"group",
          "label":{
            "en":"General settings",
            "nl":"Instellingen"
          },
          "children":[
            { "id":"retriggerRestrictTime",
              "type":"number",
              "label":{
                "en":"Minimum time between movement triggers (seconds)",
                "nl":"Minimumtijd tussen beweging triggers (seconden)"
              },
              "value": 10,
              "attr":{
                "min": 0,
                "max": 86400
              }
            },
            { "id":"retriggerRestrictDistance",
              "type":"number",
              "label":{
                "en":"Minimum distance travelled between movement triggers (meters)",
                "nl":"Minimaal afgelegde afstand tussen triggers (meter)"
              },
              "value": 1,
              "attr":{
                "min": 0,
                "max": 40075000
              }
            },
            { "id":"pollInterval",
              "type":"number",
              "label":{
                "en":"Polling interval for location and geofence tracking (seconds)",
                "nl":"Poll-interval voor bijhouden locatie en geofences (seconden)"
              },
              "value": 20,
              "attr":{
                "min": 10,
                "max": 600
              }
            }
          ]
        }
      ],
      "pair":[
        {
          "id":"start"
        },
        {
          "id":"list_devices",
          "template":"list_devices",
          "navigation":{
            "next":"add_vehicle"
          }
        },
        {
          "id":"add_vehicle",
          "template":"add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers":[
      { "id":"vehicleMoved",
        "title":{
          "en":"Location changed",
          "nl":"Locatie gewijzigd"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ],
        "tokens":[
          {
            "name":"address",
            "title":{
              "en":"address",
              "nl":"adres"
            },
            "type":"string",
            "example":{
              "en":"Piccadilly Circus, London",
              "nl":"Kalverstraat in Amsterdam"
            }
          },{
            "name":"distance",
            "title":{
              "en":"distance",
              "nl":"afstand"
            },
            "type":"number",
            "example":2500
          }
        ]
      },
      { "id":"vehicleStartMoving",
        "title":{
          "en":"Starts moving",
          "nl":"Komt in beweging"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ],
        "tokens":[
          {
            "name":"address",
            "title":{
              "en":"address",
              "nl":"adres"
            },
            "type":"string",
            "example":{
              "en":"Piccadilly Circus, London",
              "nl":"Kalverstraat in Amsterdam"
            }
          },{
            "name":"distance",
            "title":{
              "en":"distance",
              "nl":"afstand"
            },
            "type":"number",
            "example":25.54
          }
        ]
      },
      { "id":"vehicleStoptMoving",
        "title":{
          "en":"Stops moving",
          "nl":"Stopt beweging"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ],
        "tokens":[
          {
            "name":"start_location",
            "title":{
              "en":"start address",
              "nl":"beginpunt"
            },
            "type":"string",
            "example":{
              "en":"Piccadilly Circus, London",
              "nl":"Kalverstraat in Amsterdam"
            }
          },{
            "name":"stop_location",
            "title":{
              "en":"end address",
              "nl":"bestemming"
            },
            "type":"string",
            "example":{
              "en":"Piccadilly Circus, London",
              "nl":"Kalverstraat in Amsterdam"
            }
          },{
            "name":"distance",
            "title":{
              "en":"distance travelled",
              "nl":"afgelegde afstand"
            },
            "type":"number",
            "example":2500.21
          }
        ]
      },
      { "id":"vehicleGeofenceEntered",
        "title":{
          "en":"Entered geofence",
          "nl":"Betreed geofence"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "geofence",
            "type": "autocomplete"
          }
        ]
      },
      { "id":"vehicleGeofenceLeft",
        "title":{
          "en":"Left geofence",
          "nl":"Verlaat geofence"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "geofence",
            "type": "autocomplete"
          }
        ]
      }
    ],
    "conditions": [
      { "id":"autoConditioningState",
        "title":{
           "en":"Airco is !{{on|off}}",
           "nl":"Airco is !{{aan|uit}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ]
      },
      { "id":"driverTempSettingValue",
        "title":{
           "en":"Airco setpoint is !{{|not}} above (℃)",
           "nl":"Airco instelling is !{{|niet}} boven (℃)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "temperature",
            "type": "number"
          }
        ]
      },
      { "id":"magicApiConditions",
        "title":{
           "en":"Api condition !{{|inversed}}",
           "nl":"Api conditie !{{|omgekeerd}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "apiValue",
            "type": "autocomplete"
          },{
            "name": "conditionType",
            "type": "autocomplete"
          },{
            "name": "conditionValue",
            "type": "text"
          }
        ]
      },
      { "id":"panoroofState",
        "title":{
           "en":"Panoroof is !{{open|closed}}",
           "nl":"Panoramadak is !{{open|dicht}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ]
      },
      { "id":"vehicleGeofence",
        "title":{
          "en":"Is !{{|not}} in geofence",
          "nl":"Is !{{|niet}} in geofence"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "geofence",
            "type": "autocomplete"
          }
        ]
      },
      { "id":"vehicleMoving",
        "title":{
           "en":"!{{Driving|Not driving}}",
           "nl":"Rijdt !{{|niet}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ]
      }
    ],
    "actions": [
      { "id":"autoconditioningControl",
        "title":{
           "en":"Airco",
           "nl":"Airco"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "autoconditioningstate",
            "type": "dropdown",
            "values": [
              {
                "id": "OFF",
                "label": {
                  "en": "Off", "nl": "Uit"
                }
              },{
                "id": "ON",
                "label": {
                  "en": "On", "nl": "Aan"
                }
              }
            ]
          }
        ]
      },
      { "id":"autoconditioningTemperature",
        "title":{
           "en":"Temperature setpoint",
           "nl":"Temperatuur instellen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "temp",
            "type": "range",
            "min": 17,
            "max": 31,
            "step": 0.5,
            "label": "℃",
            "labelDecimals": 1
          }
        ]
      },
      { "id":"chargeControl",
        "title":{
           "en":"Charging",
           "nl":"Opladen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "chargestate",
            "type": "dropdown",
            "values": [
              {
                "id": "OFF",
                "label": {
                  "en": "Off", "nl": "Uit"
                }
              },{
                "id": "ON",
                "label": {
                  "en": "On", "nl": "Aan"
                }
              }
            ]
          }
        ]
      },
      { "id":"doorLockControl",
        "title":{
           "en":"Doors",
           "nl":"Deuren"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "lock",
            "type": "dropdown",
            "values": [
              {
                "id": "LOCK",
                "label": {
                  "en": "Lock", "nl": "Vergrendelen"
                }
              },{
                "id": "OPEN",
                "label": {
                  "en": "Unlock", "nl": "Openen"
                }
              }
            ]
          }
        ]
      },
      { "id":"flashLights",
        "title":{
           "en":"Flash lights",
           "nl":"Knipper koplampen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ]
      },
      { "id":"honk",
        "title":{
           "en":"Honk horn",
           "nl":"Claxonneer"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ]
      },
      { "id":"openChargePort",
        "title":{
           "en":"Open charge port",
           "nl":"Openen oplaadpunt"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ]
      },
      { "id":"panoroofControl",
        "title":{
           "en":"Panoroof setting",
           "nl":"Panoramadak instelling"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "panoroofstate",
            "type": "dropdown",
            "values": [
              {
                "id": "open",
                "label": {
                  "en": "Open", "nl": "Openen"
                }
              },{
                "id": "close",
                "label": {
                  "en": "Close", "nl": "Sluiten"
                }
              },{
                "id": "comfort",
                "label": {
                  "en": "Comfort", "nl": "Comfort"
                }
              },{
                "id": "vent",
                "label": {
                  "en": "Vent", "nl": "Ventileren"
                }
              }
            ]
          }
        ]
      },
      { "id":"remoteStartDrive",
        "title":{
           "en":"Remote start",
           "nl":"Starten"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ]
      },
      { "id":"resetValetPin",
        "title":{
           "en":"Reset valet PIN",
           "nl":"Reset valet PIN"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ]
      },
      { "id":"sayLocation",
        "title":{
           "en":"Say location",
           "nl":"Vertel locatie"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ]
      },
      { "id":"setChargeMode",
        "title":{
           "en":"Set charge limit mode",
           "nl":"Instellen oplaad modus"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "chargemode",
            "type": "dropdown",
            "values": [
              {
                "id": "standard",
                "label": {
                  "en": "Standard", "nl": "Standaard"
                }
              },{
                "id": "max_range",
                "label": {
                  "en": "Max range", "nl": "Maximaal bereik"
                }
              }
            ]
          }
        ]
      },
      { "id":"setChargeLimit",
        "title":{
           "en":"Set charge limit %",
           "nl":"Instellen oplaad limiet %"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "limit",
            "type": "range",
            "min": 10,
            "max": 100,
            "step": 1,
            "label": "%",
            "labelDecimals": 0
          }
        ]
      },
      { "id":"setValetMode",
        "title":{
           "en":"Valet mode",
           "nl":"Valet modus"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "valetstate",
            "type": "dropdown",
            "values": [
              {
                "id": "OFF",
                "label": {
                  "en": "Off", "nl": "Uit"
                }
              },{
                "id": "ON",
                "label": {
                  "en": "On", "nl": "Aan"
                }
              }
            ]
          }
        ]
      },
      { "id":"setValetPin",
        "title":{
           "en":"Activate valet mode with PIN",
           "nl":"Valet modus activeren met PIN"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          },{
            "name": "pin",
            "type": "text",
            "label": {
              "en": "Off", "nl": "Uit"
            },
            "placeholder": {
              "en": "0000"
            }
          }
        ]
      },
      { "id":"wakeUp",
        "title":{
           "en":"Wake up from sleep state",
           "nl":"Wekken uit slaapstand"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=models"
          }
        ]
      }
    ]
  },
  "speech": [
    {
      "id": "tesla",
      "importance": 1,
      "triggers": {
        "en": ["tesla"],
        "nl": ["tesla"]
      }
    },{
      "id": "where_is",
      "importance": 0.4,
      "triggers": {
        "en": ["where is", "what is"],
        "nl": ["waar is", "wat is"]
      }
    },{
      "id": "address",
      "importance": 0.4,
      "triggers": {
        "en": ["address", "location", "position"],
        "nl": ["adres", "locatie", "positie"]
      }
    }
  ],
  "speechExamples":[
    {
      "en": "Tesla [car name]",
      "nl": "Tesla [naam auto]"
    },
    {
      "en": "What is address/location/position [car name]",
      "nl": "Wat is adres/locatie/positie [naam auto]"
    }
  ]
}
