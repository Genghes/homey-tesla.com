{
  "id":"com.tesla.2",
  "version":"2.0.0",
  "compatibility":">=2.x",
  "sdk": 2,
  "name":{
    "en":"Tesla",
    "nl":"Tesla"
  },
  "description":{
    "en":"Control your Tesla",
    "nl":"Bedien je Tesla"
  },
  "author":{
    "name":"Erik van Dongen",
    "website":"http://github.com/irritanterik/"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "ErikvanDongen",
        "currency": "EUR"
      }
    }
  },
  "category":[
		"localization"
	],
  "permissions":[
    "homey:manager:geolocation",
    "homey:manager:speech-output"
  ],
  "images":{
    "large":"./assets/images/large.png",
    "small":"./assets/images/small.png"
  },
  "capabilities":{
    "location_human": {
      "type": "string",
      "title": {
        "en": "Location",
        "nl": "Positie"
      },
      "desc": {
        "en": "Location"
      },
      "getable": true,
      "setable": false
    },
    "moving": {
      "type": "boolean",
      "title": {
        "en": "Movement",
        "nl": "Onderweg"
      },
      "desc": {
        "en": "Is car moving",
        "nl": "Is auto onderweg"
      },
      "getable": true,
      "setable": false
    }
  },
  "drivers":[
    {
      "id":"ev",
      "name":{
        "en":"Model S/3/X",
        "nl":"Model S/3/X"
      },
      "images":{
        "large":"drivers/ev/assets/images/large_s.jpg",
        "small":"drivers/ev/assets/images/small_s.jpg"
      },
      "class":"other",
      "capabilities":["location_human", "moving", "measure_battery"],
      "settings":[
        {
          "type":"group",
          "label":{
            "en":"Tracking settings",
            "nl":"Instellingen polling"
          },
          "children":[
            { "id":"locationPolling",
              "type":"checkbox",
              "label":{
                "en":"Track location",
                "nl":"Locatie volgen"
              },
              "value": true
            },
            { "id":"tripTracking",
              "type":"checkbox",
              "label":{
                "en":"Save last 100 trips (for debugging purposes)",
                "nl":"Laatste 100 ritten opslaan (analyse en debug optie)"
              },
              "value": false
            },
            { "id":"locationIntervalDriving",
              "type":"number",
              "label":{
                "en":"Location tracking interval during driving (seconds)",
                "nl":"Interval volgen locatie tijdens rijden (seconden)"
              },
              "value": 30,
              "attr":{
                "min": 10,
                "max": 600
              }
            },
            { "id":"locationIntervalParked",
              "type":"number",
              "label":{
                "en":"Location tracking when parked (seconds)",
                "nl":"Interval volgen locatie in stilstand (seconden)"
              },
              "value": 120,
              "attr":{
                "min": 10,
                "max": 600
              }
            },
            { "id":"batteryPolling",
              "type":"checkbox",
              "label":{
                "en":"Poll battery level",
                "nl":"Accuniveau bijhouden"
              },
              "value": true
            },
            { "id":"batteryInterval",
              "type":"number",
              "label":{
                "en":"Battery poll interval (minutes)",
                "nl":"Interval controle accuniveau (minuten)"
              },
              "value": 20,
              "attr":{
                "min": 1,
                "max": 1440
              }
            }
          ]
        },
        {
          "type":"group",
          "label":{
            "en":"Trigger tuning - adjust settings for optimal flow triggering.",
            "nl":"Triggers tunen - instellingen om flow triggers naar je zin te maken."
          },
          "children":[
            { "id":"retriggerRestrictTime",
              "type":"number",
              "label":{
                "en":"Minimum time between movement triggers (seconds)",
                "nl":"Minimumtijd tussen beweging triggers (seconden)"
              },
              "value": 10,
              "attr":{
                "min": 0,
                "max": 86400
              }
            },
            { "id":"retriggerRestrictDistance",
              "type":"number",
              "label":{
                "en":"Minimum distance travelled between movement triggers (meters)",
                "nl":"Minimaal afgelegde afstand tussen triggers (meter)"
              },
              "value": 1,
              "attr":{
                "min": 0,
                "max": 40075000
              }
            }
          ]
        },
        {
          "type":"group",
          "label":{
            "en":"Account settings - reconfigure a changed password. This password will not be saved on Homey.",
            "nl":"Instellingen account - geef hier een gewijzigd wachtwoord op. Het wachtwoord wordt niet opgeslagen op Homey."
          },

          "children":[
            { "id":"password",
              "type":"password",
              "label":{
                "en":"New password",
                "nl":"Nieuw wachtwoord"
              }
            }
          ]
        }
      ],
      "pair":[
        {
          "id":"start",
          "template":"login_credentials",
          "options":{
            "logo":"pair_logo.png",
            "usernameLabel":"Tesla account",
            "usernamePlaceholder":"e.musk@tesla.com",
            "passwordLabel":"Password",
            "passwordPlaceholder":"P4ssw0rd"
          }
        },
        {
          "id":"list_devices",
          "template":"list_devices",
          "navigation":{
            "next":"add_vehicle"
          }
        },
        {
          "id":"add_vehicle",
          "template":"add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers":[
      { "id":"vehicleMoved",
        "title":{
          "en":"Location changed",
          "nl":"Locatie gewijzigd"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ],
        "tokens":[
          {
            "name":"address",
            "title":{
              "en":"address",
              "nl":"adres"
            },
            "type":"string",
            "example":{
              "en":"Piccadilly Circus, London",
              "nl":"Kalverstraat in Amsterdam"
            }
          },{
            "name":"distance",
            "title":{
              "en":"distance",
              "nl":"afstand"
            },
            "type":"number",
            "example":2500
          }
        ]
      },
      { "id":"vehicleStartMoving",
        "title":{
          "en":"Starts moving",
          "nl":"Komt in beweging"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ],
        "tokens":[
          {
            "name":"address",
            "title":{
              "en":"address",
              "nl":"adres"
            },
            "type":"string",
            "example":{
              "en":"Piccadilly Circus, London",
              "nl":"Kalverstraat in Amsterdam"
            }
          },{
            "name":"distance",
            "title":{
              "en":"distance",
              "nl":"afstand"
            },
            "type":"number",
            "example":25.54
          }
        ]
      },
      { "id":"vehicleStoptMoving",
        "title":{
          "en":"Stops moving",
          "nl":"Stopt beweging"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ],
        "tokens":[
          {
            "name":"start_location",
            "title":{
              "en":"start address",
              "nl":"beginpunt"
            },
            "type":"string",
            "example":{
              "en":"Piccadilly Circus, London",
              "nl":"Kalverstraat in Amsterdam"
            }
          },{
            "name":"stop_location",
            "title":{
              "en":"end address",
              "nl":"bestemming"
            },
            "type":"string",
            "example":{
              "en":"Piccadilly Circus, London",
              "nl":"Kalverstraat in Amsterdam"
            }
          },{
            "name":"distance",
            "title":{
              "en":"distance travelled",
              "nl":"afgelegde afstand"
            },
            "type":"number",
            "example":2500.21
          }
        ]
      }
    ],
    "conditions": [
      { "id":"autoConditioningState",
        "title":{
           "en":"Airco is !{{on|off}}",
           "nl":"Airco is !{{aan|uit}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ]
      },
      { "id":"driverTempSettingValue",
        "title":{
           "en":"Airco setpoint is !{{|not}} above (℃)",
           "nl":"Airco instelling is !{{|niet}} boven (℃)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          },{
            "name": "temperature",
            "type": "number"
          }
        ]
      },
      { "id":"magicApiConditions",
        "title":{
           "en":"Api condition !{{|inversed}}",
           "nl":"Api conditie !{{|omgekeerd}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          },{
            "name": "apiValue",
            "type": "autocomplete"
          },{
            "name": "conditionType",
            "type": "autocomplete"
          },{
            "name": "conditionValue",
            "type": "text"
          }
        ]
      },
      { "id":"panoroofState",
        "title":{
           "en":"Panoroof is !{{open|closed}}",
           "nl":"Panoramadak is !{{open|dicht}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ]
      },
      { "id":"vehicleMoving",
        "title":{
           "en":"!{{Driving|Not driving}}",
           "nl":"Rijdt !{{|niet}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ]
      }
    ],
    "actions": [
      { "id":"autoconditioningControl",
        "title":{
           "en":"Airco",
           "nl":"Airco"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          },{
            "name": "autoconditioningstate",
            "type": "dropdown",
            "values": [
              {
                "id": "OFF",
                "label": {
                  "en": "Off", "nl": "Uit"
                }
              },{
                "id": "ON",
                "label": {
                  "en": "On", "nl": "Aan"
                }
              }
            ]
          }
        ]
      },
      { "id":"autoconditioningTemperature",
        "title":{
           "en":"Temperature setpoint",
           "nl":"Temperatuur instellen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          },{
            "name": "temp",
            "type": "range",
            "min": 17,
            "max": 31,
            "step": 0.5,
            "label": "℃",
            "labelDecimals": 1
          }
        ]
      },
      { "id":"chargeControl",
        "title":{
           "en":"Charging",
           "nl":"Opladen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          },{
            "name": "chargestate",
            "type": "dropdown",
            "values": [
              {
                "id": "OFF",
                "label": {
                  "en": "Off", "nl": "Uit"
                }
              },{
                "id": "ON",
                "label": {
                  "en": "On", "nl": "Aan"
                }
              }
            ]
          }
        ]
      },
      { "id":"doorLockControl",
        "title":{
           "en":"Doors",
           "nl":"Deuren"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          },{
            "name": "lock",
            "type": "dropdown",
            "values": [
              {
                "id": "LOCK",
                "label": {
                  "en": "Lock", "nl": "Vergrendelen"
                }
              },{
                "id": "OPEN",
                "label": {
                  "en": "Unlock", "nl": "Openen"
                }
              }
            ]
          }
        ]
      },
      { "id":"flashLights",
        "title":{
           "en":"Flash lights",
           "nl":"Knipper koplampen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ]
      },
      { "id":"honk",
        "title":{
           "en":"Honk horn",
           "nl":"Claxonneer"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ]
      },
      { "id":"openChargePort",
        "title":{
           "en":"Open charge port",
           "nl":"Openen oplaadpunt"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ]
      },
      { "id":"panoroofControl",
        "title":{
           "en":"Panoroof setting",
           "nl":"Panoramadak instelling"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          },{
            "name": "panoroofstate",
            "type": "dropdown",
            "values": [
              {
                "id": "open",
                "label": {
                  "en": "Open", "nl": "Openen"
                }
              },{
                "id": "close",
                "label": {
                  "en": "Close", "nl": "Sluiten"
                }
              },{
                "id": "comfort",
                "label": {
                  "en": "Comfort", "nl": "Comfort"
                }
              },{
                "id": "vent",
                "label": {
                  "en": "Vent", "nl": "Ventileren"
                }
              }
            ]
          }
        ]
      },
      { "id":"remoteStartDrive",
        "title":{
           "en":"Remote start",
           "nl":"Starten"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ]
      },
      { "id":"resetValetPin",
        "title":{
           "en":"Reset valet PIN",
           "nl":"Reset valet PIN"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ]
      },
      { "id":"sayLocation",
        "title":{
           "en":"Say location",
           "nl":"Vertel locatie"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ]
      },
      { "id":"setChargeMode",
        "title":{
           "en":"Set charge limit mode",
           "nl":"Instellen oplaad modus"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          },{
            "name": "chargemode",
            "type": "dropdown",
            "values": [
              {
                "id": "standard",
                "label": {
                  "en": "Standard", "nl": "Standaard"
                }
              },{
                "id": "max_range",
                "label": {
                  "en": "Max range", "nl": "Maximaal bereik"
                }
              }
            ]
          }
        ]
      },
      { "id":"setChargeLimit",
        "title":{
           "en":"Set charge limit %",
           "nl":"Instellen oplaad limiet %"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          },{
            "name": "limit",
            "type": "range",
            "min": 10,
            "max": 100,
            "step": 1,
            "label": "%",
            "labelDecimals": 0
          }
        ]
      },
      { "id":"setValetMode",
        "title":{
           "en":"Valet mode",
           "nl":"Valet modus"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          },{
            "name": "valetstate",
            "type": "dropdown",
            "values": [
              {
                "id": "OFF",
                "label": {
                  "en": "Off", "nl": "Uit"
                }
              },{
                "id": "ON",
                "label": {
                  "en": "On", "nl": "Aan"
                }
              }
            ]
          }
        ]
      },
      { "id":"setValetPin",
        "title":{
           "en":"Activate valet mode with PIN",
           "nl":"Valet modus activeren met PIN"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          },{
            "name": "pin",
            "type": "text",
            "label": {
              "en": "Off", "nl": "Uit"
            },
            "placeholder": {
              "en": "0000"
            }
          }
        ]
      },
      { "id":"wakeUp",
        "title":{
           "en":"Wake up from sleep state",
           "nl":"Wekken uit slaapstand"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=ev"
          }
        ]
      }
    ]
  }
}
